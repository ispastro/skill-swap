# Database
DATABASE_URL=postgresql://user:password@localhost:5432/skillswap
DIRECT_URL=postgresql://user:password@localhost:5432/skillswap

# Server
PORT=8000
NODE_ENV=development

# JWT
JWT_SECRET=your_jwt_secret_here

# Redis (Upstash)
UPSTASH_REDIS_REST_URL=https://your-upstash-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8000/auth/google/callback

# Frontend
FRONTEND_URL=http://localhost:5173

# Embeddings - Choose ONE (all have free tiers)
EMBEDDING_PROVIDER=cohere  # Options: 'cohere' or 'huggingface'

# Cohere (FREE: 1000 calls/month) - RECOMMENDED
# Sign up: https://dashboard.cohere.com/
COHERE_API_KEY=your-cohere-api-key

# HuggingFace (FREE but rate limited) - FALLBACK
# Sign up: https://huggingface.co/settings/tokens
HF_API_KEY=your-huggingface-api-key

# Python Matching Service (Microservice)
USE_PYTHON_MATCHING=false  # Set to 'true' when Python service is ready
MATCHING_SERVICE_URL=http://localhost:8001
